<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.wpwk.mappers.ContentsReportMapper">

    <resultMap id ="User" type="com.ssafy.wpwk.model.User">
        <result column="id" property="id"/>
        <result column="nickname" property="nickname"/>
    </resultMap>

    <resultMap id="Contents" type="com.ssafy.wpwk.model.Contents">
        <result column="id" property="id"/>
        <result column="title" property="title"/>
    </resultMap>

    <resultMap id="ContentsReport" type="com.ssafy.wpwk.model.ContentsReport">
        <result column="id" property="id"/>
        <result column="comment" property="comment"/>
        <result column="created_at" property="createdAt"/>
        <collection property="user" resultMap="User"/>
        <collection property="contents" resultMap="Contents"/>
    </resultMap>


    <select id="allReports" resultMap="ContentsReport" resultType="com.ssafy.wpwk.model.ContentsReport">
        SELECT c2.id ,c2.title,u.id ,u.nickname ,c2.created_at
        FROM user u join(
            SELECT c.id,c.title,cr.user_id,cr.created_at
            FROM contents_report cr join contents c
            where cr.contents_id=  c.id
        ) c2
        WHERE u.id = c2.user_id;
    </select>

    <insert id="addReport" parameterType="map">
        INSERT INTO contents_report (contents_id,user_id,comment)
        VALUES (#{reportRequestDTO.contentsId},#{userId},#{reportRequestDTO.comment})
    </insert>
</mapper>
